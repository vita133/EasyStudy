<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_corners">


        <TextView
            android:id="@+id/textView_name"
            android:layout_width="298dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:text="Управління ризиками та якістю проектів"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_name"
            app:srcCompat="@drawable/ic_clock" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:text="12:20-13:55"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_clock"
            app:layout_constraintTop_toBottomOf="@+id/textView_name" />


        <ImageView
            android:id="@+id/imageView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_time"
            app:srcCompat="@drawable/ic_schedule" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:text="Вівторок, Лютий 7"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_clock"
            app:layout_constraintTop_toBottomOf="@+id/textView_time" />

        <ImageView
            android:id="@+id/imageView_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_date"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/textView_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:text="Корочкін О.В."
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_clock"
            app:layout_constraintTop_toBottomOf="@+id/textView_date" />

        <ImageView
            android:id="@+id/imageView_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_professor"
            app:srcCompat="@drawable/ic_repeat" />

        <TextView
            android:id="@+id/textView_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:text="Щотижня"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_professor"
            app:layout_constraintTop_toBottomOf="@+id/textView_professor" />

        <ImageView
            android:id="@+id/imageView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_repeat"
            app:srcCompat="@drawable/ic_map_black" />

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:text="Join Zoom meeting384-402-9757​"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_professor"
            app:layout_constraintTop_toBottomOf="@+id/textView_repeat" />

        <ImageView
            android:id="@+id/imageView_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_location"
            app:srcCompat="@drawable/ic_progress" />

        <TextView
            android:id="@+id/textView_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:text="Проведено 2/14 занять"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_professor"
            app:layout_constraintTop_toBottomOf="@+id/textView_location" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="40dp"
            android:indeterminateOnly="false"
            android:max="100"
            android:progress="80"
            android:progressDrawable="@drawable/circle"
            android:theme="@style/CircularProgress"
            app:layout_constraintStart_toEndOf="@+id/imageView_progress"
            app:layout_constraintTop_toBottomOf="@+id/textView_progress" />

        <TextView
            android:id="@+id/textView_progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="172dp"
            android:layout_marginTop="88dp"
            android:text="80%"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_progress" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>